<configs>

<!--	// SMX // Background Texture -->

		<append xpath="/windows/window[@name='menuBackground']">
			<texture name="SMXmainMenuBG" depth="1" texture="@file:Mods/SMXmainMenu/Textures/mainmenu/smxmmenubg.png" material="Materials/Transparent Colored" anchor_left="#cam,0,-5" anchor_bottom="#cam,0,-5" anchor_right="#cam,1,5" anchor_top="#cam,1,5" />
		</append>

		<remove xpath="/windows/window[@name='menuBackground']/texture[@name='bgTexture']" />


<!--	// SMX // Main Menu Logo -->

		<set xpath="/windows/window[@name='mainMenuLogo']/texture[@name='gameLogo']/@anchor_top">#cam,0.5,450</set>
		<set xpath="/windows/window[@name='mainMenuLogo']/texture[@name='gameLogo']/@anchor_left">#cam,0.5,-1000</set>
		<set xpath="/windows/window[@name='mainMenuLogo']/texture[@name='gameLogo']/@anchor_bottom">#cam,0.5,150</set>

		<set xpath="/windows/window[@name='mainMenuLogo']/@depth">3</set>


<!--	// SMX // Main Menu -->

		<append xpath="/windows">

			<window name="SMXmainMenu" pos="-560,0" width="1050" height="780" anchor="CenterCenter" controller="MainMenu" cursor_area="true">

				<texture depth="2" texture="@file:Mods/SMXmainMenu/Textures/mainmenu/smxmenubg.png" material="Materials/Transparent Colored" name="menuBG" size="408,1080" pos="60,0" pivot="center" />

				<grid name="SMXmainMenuGrid" pos="50,80" rows="13" cell_width="230" cell_height="70" repeat_content="false" arrangement="vertical">
					<SMX_main_Menu_BTN1 name="btnNewGame" width="230" height="54" caption_key="xuiNewGame" pivot="center" />
					<SMX_main_Menu_BTN2 name="btnContinueGame" width="230" height="54" caption_key="xuiContinueGame" pivot="center" />
					<SMX_main_Menu_BTN1 name="btnConnectToServer" width="230" height="54" caption_key="xuiConnectToServer" pivot="center" />
					<SMX_main_Menu_BTN2 name="btnEditingTools" width="230" height="54" caption_key="xuiEditingTools" pivot="center" />
					<SMX_main_Menu_BTN1 name="btnOptions" width="230" height="54" caption_key="xuiOptions" pivot="center" />
					<rect><texture name="SMXredSep" depth="1" pos="-140,-24" size="301,4" texture="@file:Mods/SMXmainMenu/Textures/mainmenu/smxredsep.png" material="Materials\Transparent Colored" pivot="${pivot|center}" /></rect>
					<SMX_main_Menu_BTN1 name="btnQuit" width="230" height="54" caption_key="xuiQuit" pivot="center" />
				</grid>
					<SMX_main_Menu_BTN4 pos="1300,-420" name="btnCredits" width="160" height="56" caption_key="xuiCredits" pivot="center" />

				<label name="SMXeditionInfo" depth="2" pos="60,-470" size="250,33" text="Stable Release Version" font_size="16" color="[white]" effect="outline" justify="center" pivot="center" />
				<label name="SMXversionInfo" depth="2" pos="60,-490" size="250,33" text="SMX-A17B199e" font_size="16" color="[white]" effect="outline" justify="center" pivot="center" />

			</window>


<!--	// SMX // Options Menu -->

			<window name="SMXoptionsMenu" pos="-560,0" width="1050" height="780" anchor="CenterCenter" controller="OptionsMenu" cursor_area="true">

				<texture name="SMXoptionsMenuBG" depth="2" pos="60,0" size="408,1080" texture="@file:Mods/SMXmainMenu/Textures/mainmenu/smxmenubg.png" material="Materials/Transparent Colored" pivot="center" />

				<grid name="SMXoptionsButtons" pos="50,80" rows="13" cell_width="230" cell_height="70" repeat_content="false" arrangement="vertical">
					<SMX_main_Menu_BTN1 name="btnVideo" width="230" height="54" caption_key="xuiBtnOptionsVideo" pivot="center" />
					<SMX_main_Menu_BTN2 name="btnAudio" width="230" height="54" caption_key="xuiBtnOptionsAudio" pivot="center" />
					<SMX_main_Menu_BTN1 name="btnControls" width="230" height="54" caption_key="xuiBtnOptionsControls" pivot="center" />
					<SMX_main_Menu_BTN2 name="btnProfiles" width="230" height="54" caption_key="xuiBtnOptionsProfiles" visible="{notingame}" pivot="center" />
					<SMX_main_Menu_BTN1 name="btnAccount" width="230" height="54" caption_key="xuiBtnOptionsAccount" visible="{notreleaseingame}" pivot="center" />
					<rect><texture name="SMXredSep" depth="1" pos="-140,-24" size="301,4" texture="@file:Mods/SMXmainMenu/Textures/mainmenu/smxredsep.png" material="Materials\Transparent Colored" visible="{ingame}" pivot="${pivot|center}" /></rect>
					<SMX_main_Menu_BTN3 name="btnBack" width="230" height="54" caption_key="xuiBack" visible="{ingame}" pivot="center" />
				</grid>

				<widget anchor_left="#cam,0,40" anchor_bottom="#cam,0,80" anchor_right="#cam,0,50" anchor_top="#cam,0,90" pivot="bottomleft">
					<SMX_main_Menu_BTN3 name="btnBack" width="200" height="54" caption_key="xuiBack" visible="{notingame}" pivot="left" />
				</widget>
			</window>

<!--	// SMX // Editing Tools Menu -->

			<window name="SMXeditingTools" pos="-560,0" width="1050" height="780" anchor="CenterCenter" controller="EditingTools" cursor_area="true">

				<texture name="SMXeditingMenuBG" depth="2" size="408,1080" pos="60,0" texture="@file:Mods/SMXmainMenu/Textures/mainmenu/smxmenubg.png" material="Materials/Transparent Colored" pivot="center" />

				<grid name="SMXeditingButtons" pos="50,80" rows="13" cell_width="400" cell_height="70" repeat_content="false" arrangement="vertical">
					<SMX_main_Menu_BTN1L name="btnRwgPreviewer" width="400" height="54" caption_key="xuiRwgPreviewer" visible="false" pivot="center" />
					<SMX_main_Menu_BTN2L name="btnPrefabEditor" width="400" height="54" caption_key="xuiPrefabEditor" pivot="center" />
					<SMX_main_Menu_BTN1L name="btnWorldEditor" width="400" height="54" caption_key="xuiWorldEditor" pivot="center" />
				</grid>
		
				<widget anchor_left="#cam,0,40" anchor_bottom="#cam,0,80" anchor_right="#cam,0,50" anchor_top="#cam,0,90" pivot="bottomleft">
					<SMX_main_Menu_BTN3 name="btnBack" width="200" height="54" caption_key="xuiBack" visible="{notingame}" pivot="left" />
				</widget>
			</window>

	</append>

</configs>