<SMXmenu name="XUi_Common/controls.xml">

<!--	// SMX // Main Menu Button -->

		<append xpath="/controls">
			<smxmenu_mainmenubutton	depth="3"
									pos="0,0"
									width="200"
									height="32"
									pivot="left"
									caption=""
									caption_key=""
									enabled_font_color="[labelColor]"
									disabled_font_color="[disabledLabelColor]"
									tooltip_key=""
									visible="true"
									enabled="true"
									sound="[default_click]">
				<rect	name="${name}"
						depth="${depth}"
						pos="${pos}"
						width="${width}"
						height="${height}"
						font_size_default="${height-32}"
						enabled_font_color="${enabled_font_color}"
						disabled_font_color="${disabled_font_color}"
						controller="SimpleButton"
						visible="${visible}"
						button_enabled="${enabled}">
					<button	name="clickable"
							pos="10,${Round(-height/2,0)}"
							sprite="smxmenu_mainmenu_button"
							defaultcolor="[smxmenu_buttons_1]"
							hoversprite="smxmenu_mainmenu_button_hover"
							hovercolor="[smxmenu_buttons_hover]"
							hoverscale="1.1"
							pivot="${pivot}"
							tooltip_key="${tooltip_key}"
							sound_play_on_hover="[default_hover]"
							sound="${sound}" />
					<label		name="btnLabel"
								depth="2"
								pos="10,${Round(-2-height/2,0)}"
								width="${width-20}"
								style="smxlib_label_normal"
								text="${caption}"
								text_key="${caption_key}"
								font_size="${height-34}"
								upper_case="true"
								pivot="${pivot}"
								justify="center" />
				</rect>
			</smxmenu_mainmenubutton>
		</append>


