<!--	// SMX // Work in Progress -->

		<append xpath="/controls">
			<SMX_audiooption>
				<rect pos="${pos|0,0}" width="560" height="32">
					<label depth="4" pos="0,0" width="250" height="30" style="hover" text_key="xuiOptionsAudio${name}" font_size="28" color="[white]" effect="outline" justify="right" pivot="topleft" font_face="AgencyB" crispness="Never" />
					<combobox name="${name}" type="${type}" value_min="${value_min|@DEF}" value_max="${value_max|@DEF}" value_wrap="${value_wrap|@DEF}" value_increment="${value_increment|@DEF}" values="${values|@DEF}" reverse_list="${reverse_list|@DEF}" localization_prefix="${localization_prefix|}" format_string="${format_string|}" pos="255,0" width="300" height="32" />
				</rect>
			</SMX_audiooption>

			<SMX_savegames_list_entry>
				<rect height="${height}" style="press, doubleclick, hover, scroll" disabled_font_color="[disabledLabelColor]" enabled_font_color="[labelColor]" sound="[recipe_click]" controller="ListEntry&lt;XUiC_SavegamesList.ListEntry&gt;">
					<sprite depth="3" name="backgroundMain" sprite="menu_empty2px" height="${1+height|31}" pos="2,0" width="${width-4|220}" color="[black]" type="sliced" fillcenter="false" />
					<sprite depth="2" name="background" color="[darkGrey]" pos="2,0" width="${width-4|220}" type="sliced" />
					<texture name="SMXselectBG" depth="3" pos="2,0" size="550,61" texture="@modfolder:Textures/menu/smxselectbg.png" material="Materials/Transparent Colored" type="sliced" />
					<label depth="4" name="Name" pos="8,-2" width="${width-100}" height="32" text="{savename}" font_size="26" justify="left" pivot="topleft" font_face="AgencyB" crispness="Never" />
					<label depth="4" name="Version" pos="${width-10},-2" style="press, doubleclick, hover, scroll" color="{versioncolor}" width="80" height="32" text="{version}" tooltip="{versiontooltip}" font_size="26" justify="right" pivot="topright" font_face="AgencyB" crispness="Never" />
					<label depth="4" name="World" pos="8,${-height+2}" style="press, doubleclick, hover, scroll" color="{worldcolor}" width="${width-200}" height="32" text="{worldname} - {mode}" tooltip="{worldtooltip}" font_size="26" justify="left" pivot="bottomleft" visible="{hasentry}" font_face="AgencyB" crispness="Never" />
					<label depth="4" name="LastPlayed" pos="${width-10},${-height+2}" color="255,255,255,128" width="180" height="32" text="{lastplayed}" font_size="26" justify="right" pivot="bottomright" font_face="AgencyB" crispness="Never" />
				</rect>
			</SMX_savegames_list_entry>

			<SMX_profiles_list_entry>
				<rect height="${height|30}" width="${width}" style="press, scroll" on_doubleclick="true" font_size_default="${height-16|16}" font_size_hover="${height-8|24}" disabled_font_color="[disabledLabelColor]" enabled_font_color="[labelColor]" sound="[recipe_click]" controller="ListEntry`1[XUiC_ProfilesList+ListEntry]">
					<sprite depth="3" name="backgroundMain" sprite="menu_empty2px" height="${1+height|100}" pos="9990,9990" width="${width|250}" color="[black]" type="sliced" fillcenter="false" visible="false" />
					<sprite depth="2" name="background" color="[darkGrey]" pos="9990,9990" width="${width|250}" type="sliced" visible="false" />
					<texture name="SMXselectBG" depth="3" pos="2,0" size="200,65" texture="@modfolder:Textures/menu/smxselectbg.png" material="Materials/Transparent Colored" type="sliced" />
					<label depth="4" name="Name" pos="8,${Round(-height/2,0)|-25}" width="${width-8|242}" height="${height-4|26}" text="{name}" font_size="${height-4|26}" effect="outline" justify="left" font_face="AgencyB" crispness="Never" />
				</rect>
